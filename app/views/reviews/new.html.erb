<div class="col-3">
  <div class="form-card m-2 sticky-top" style="height: 340px">
    <h3>Add your review about this list</h3>
    <%= simple_form_for [@list, @review] do |f| %>

      <div class="form-inputs">
        <%= f.input :content, placeholder: "Add your review here" %>
      </div>

        <div class="form-inputs">
        <%= f.input :rating, collection: 1..5 %>
      </div>

      <div class="form-actions">
        <%= f.submit "Add your review", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
