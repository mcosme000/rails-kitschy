<div class="lists-container">
  <div class="container">
    <% @lessons.each do |lesson| %>
      <hr>
      <div class="list p-1 d-flex justify-content-between align-items-center">
        <h4 class="card-title"><%= lesson.name %></h4>
        <div class="buttons d-flex">
          <%= link_to 'Details', lesson_path(lesson), class: "btn btn-success me-2" %>
          <%= link_to 'Edit', edit_lesson_path(lesson), class: "btn btn-lightgreen me-2" %>
          <%= link_to 'Delete', lesson_path(lesson), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>
    <hr>
  </div>
</div>
