
<div class="container my-5">

  <h1><%= @lesson.name %></h1>
  <ul>
    <li><%= @lesson.capacity %></li>
    <li><%= @lesson.cuisine_genre %></li>
    <li><%= @lesson.lesson_length_minutes %> minutes</li>
  </ul>
  <p><%= @lesson.description %></p>

  <hr class="mt-5">

  <section class="row mt-5">
    <div class="col-12 col-md-8 d-flex">
      <%= cl_image_tag('https://res.cloudinary.com/dj2f2ofgq/image/upload/v1674779655/production/conscious-design-I4e1cY1I0FQ-unsplash_iojice.jpg', class: "avatar-big") %>
      <div class="m-5">
        <%= @lesson.user.email %>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.
        Voluptate doloremque odit cumque ipsam asperiores similique vitae eaque
        quae blanditiis quisquam! Iste nobis corrupti, rem mollitia facere maiores
        ex nihil possimus.</p>
      </div>
    </div>

    <div class="col-12 col-md-4">
      <h3>Book your lesson now!</h3>
      <% if user_signed_in? %>
        <div class="form">
          <%= simple_form_for [@lesson, @booking] do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :start_time, as: :time, html5: true %>
            <%= f.input :participants %>
            <%= f.button :submit, class: "btn btn-success" %>
          <% end %>
        </div>
      <% else %>
        <p>You need to <%= link_to "login", new_user_session_path %> to book your lesson</p>
      <% end %>
    </div>
  </section>

  <section class="row mt-5">
    <h3>Location</h3>
    <div class="col-12 col-md-4">
      <%= @lesson.address %>
      <ul>
        Instructions to get there:
        <li>Lorem ipsum dolor sit amet consectetur adipisicing elit. </li>
        <li>Lorem ipsum dolor sit amet consectetur adipisicing elit. </li>
      </ul>
    </div>

    <div class="col-12 col-md-8">
      <%= cl_image_tag('https://res.cloudinary.com/dj2f2ofgq/image/upload/v1674567512/production/lesson_map.png') %>
    </div>
  </section>

  <section class="mt-5">
    <h3>Photos from past events</h3>
    <div class="grid row">
      <div class="col-12 col-md-3">
        <%= image_tag "https://images.unsplash.com/photo-1589047133531-570405874c6a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80" %>
      </div>
      <div class="col-12 col-md-3">
        <%= image_tag "https://images.unsplash.com/photo-1570604127008-f644337cfb8b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80" %>
      </div>
      <div class="col-12 col-md-3">
        <%= image_tag "https://images.unsplash.com/photo-1589047133523-6c254bea9a35?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80" %>
      </div>
      <div class="col-12 col-md-3">
        <%= image_tag "https://images.unsplash.com/photo-1589047133481-02b4a5327d89?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80" %>
      </div>
    </div>
  </section>

</div>
