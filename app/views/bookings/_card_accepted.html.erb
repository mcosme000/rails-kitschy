<div class="container mb-2">
  <div class="accordion" id="accordionExample">
    <div class="accordion-item">
      <div class="accordion-header" id="headingTwo">
        <div class="accordion-button titile-box border border-1 d-flex p-2 accordion-header" id="headingTwo" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
          <span class="border border-primary bg-primary border-5 pe-1 me-2"   style="display: inline-block; height: 38.39px;"></span>
          <h2 class="mb-0">Accepted Lesson</h2>
        </div>
      </div>

      <div id="collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
        <div class="d-flex row justify-content-around flex-wrap p-2 accordion-body">
        <h5 class="ms-5 mt-3"><%= "There is no bookings in this field." if Booking.where(status: "accepted").count == 0 %></h5>
        <% @bookings.each do |booking| %>
          <% if booking.status == "accepted" %>
          <%# <% if booking.status == "accepted" %>
            <div class="card mb-3" style="max-width: 540px;">
              <div class="d-flex row g-0">
                <div class="card m-2 col-md-4" style="background-color: #cfe2ff;">
                  <%= image_tag "https://source.unsplash.com/200x200/?food #{booking.lesson.name}" %>
                  <div class="card-body position-relative">
                    <div class="text-center">
                      <h5 class="card-title mb-0"><%= booking.lesson.name %></h5>
                    </div>
                  </div>
                </div>
                <div class="col-md-7">
                  <div class="card-body">
                    <div class="booking-time">
                      <h5 class="mb-0 card-title"><%= booking.start_date.to_s.split(" ")[0] %> <%= booking.start_time.to_s.split(" ")[1] %></h5>
                    </div>

                    <hr class="mt-1">

                    <div class="booking-detail">
                      <div class="lesson-tags">
                        <ul class="p-0 d-flex flex-wrap">
                          <li class="d-inline me-1 mb-1 tag"><i class="fa fa-solid fa fa-person me-1"></i> <%= booking.lesson.capacity %></li>
                          <li class="d-inline me-1 mb-1 tag"><i class="fa-solid fa-utensils me-1"></i> <%= booking.lesson.cuisine_genre %> food</li>
                          <li class="d-inline me-1 mb-1 tag"><i class="fa fa-solid fa fa-clock me-1"></i> <%= booking.lesson.lesson_length_minutes %> min</li>
                        </ul>
                      </div>
                      <h5 class="text-end"><strong>$<%= booking.lesson.fee %></strong> / person</h5>
                      <h5 class="text-end"><strong><i class="fa-solid fa-user"></i> Number of participants:</strong> <%= booking.participants %></h5>
                    </div>

                    <hr class="mt-1">

                    <div class="action-buttons d-flex justify-content-end">
                        <%= link_to 'LESSON DETAIL', lesson_path(booking.lesson), class: "btn btn-primary me-2" %>
                        <%# <%= link_to 'DELETE', edit_booking_path(booking) %>
                        <%= link_to 'CANCEL', cancel_booking_path(booking), class: "btn btn-danger text-white" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          <% end %>
        <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
