<div class="container">
  <div class="d-flex row">
    <% @bookings.each do |booking| %>
      <div class="card m-2 pt-2" style="width: 18rem;">
        <div class="img-area position-relative">
          <div class="timenotice bg-danger position-absolute top-1 start-1 m-2">
            <p><%= booking.start_date.to_s.split(" ")[0] %> <%= booking.start_time.to_s.split(" ")[1] %></p>
          </div>
          <%= image_tag "https://source.unsplash.com/200x200/?food #{booking.lesson.name}" %>
          <%# <img src="https://source.unsplash.com/200x200/?food" class="card-img-top" alt="..."> %>
        </div>
        <div class="card-body position-relative">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title"><%= booking.lesson.name %></h5>
            <h4 class="card-title"><strong>$<%= booking.lesson.fee %></strong></h4>
          </div>
          <p class="card-text"><%= booking.lesson.description[...70] %>[...]</p>
          <div class="d-flex justify-content-between align-items-center">
            <h5><i class="fa-solid fa-user"></i> <%= booking.participants %></h5>
            <%= link_to 'DETAIL', lesson_path(booking.lesson), class: "btn btn-primary" %>
          </div>
          <%# <a href="#" class="btn btn-primary my-2 position-absolute bottom-0 end-0">DETAIL</a> %>
        </div>
      </div>
    <% end %>
  </div>
</div>
